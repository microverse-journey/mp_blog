<div class="posts">
    <%= render partial: 'shared/post', locals: { post: @post,user: @post.author, display_comments: true, single_post: true } %>
</div>

<% if user_signed_in? %>
    <div class="post-action">
        <%= link_to "Add Comment", new_user_post_comment_path(@post.author,@post), class: "btn btn-outline-secondary" %>
        <%= button_to "Like Post", user_post_likes_path(@post.author,@post),  method: :post, class: "btn btn-secondary" %>
    </div>
<% end %>
